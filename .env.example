# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# URL единого приложения Hub (размещено на VPS)
WEBAPP_HUB_URL=https://tghub.duckdns.org/hub/

# Оплата Stars (~100 ₽). 0 = отключить платёж (для тестов)
PAYMENT_STARS=100

# API ключ для ИИ (выберите один из вариантов)
# Вариант 1: OpenRouter (бесплатные модели, работает из России)
OPENROUTER_API_KEY=sk-or-v1-your_key_here
AI_MODEL=google/gemma-3-4b-it:free
# Опционально: разные модели для chat / extract / summary
# AI_MODEL_CHAT=openai/gpt-4o-mini
# AI_MODEL_EXTRACT=google/gemma-3-4b-it:free
# AI_MODEL_SUMMARY=google/gemma-3-4b-it:free

# Вариант 2: vsellm.ru (российский прокси)
# VSELM_API_KEY=your_vsellm_api_key_here
# VSELM_BASE_URL=https://api.vsellm.ru/v1

# Вариант 3: Google Gemini
# GOOGLE_API_KEY=your_google_api_key_here

# Вариант 4: YandexGPT (Foundation Models: Api-Key + каталог)
# Создание ключа: https://yandex.cloud/ru/docs/iam/operations/api-key/create
# YANDEX_API_KEY=ваш_секретный_ключ_от_консоли
# YANDEX_FOLDER_ID=идентификатор_каталога_в_yandex_cloud
# AI_MODEL=yandexgpt-lite/latest   или  yandexgpt/latest
